# Generated by `python3 ./setup.py package`
pkgname=xpra
pkgver={pkgver}
pkgrel=1
pkgdesc='Multi-platform remote display server and client'
arch=('{pkg_arch}')
url='https://xpra.org/'
license=('GPL2')

# Note: building requires the usual Arch build tooling (ie: `base-devel`).
depends=('python')
makedepends=('cython' 'python-setuptools' 'python-packaging' 'pkgconf')

source=('{tar_name}')
sha256sums=('SKIP')

build() {{
  cd "$srcdir/xpra-$pkgver"
  python3 ./setup.py build
}}

package() {{
  cd "$srcdir/xpra-$pkgver"
  python3 ./setup.py install --root="$pkgdir" --prefix=/usr --skip-build --optimize=1
}}
